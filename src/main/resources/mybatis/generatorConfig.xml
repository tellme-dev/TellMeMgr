<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE generatorConfiguration  
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"  
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">  
  
  
  
<generatorConfiguration>   
       
    <context id="mysql_tables" targetRuntime="MyBatis3">  
    	
        <commentGenerator>
        	<property name="suppressAllComments" value="true" />
        </commentGenerator>
        
        <jdbcConnection driverClass="org.gjt.mm.mysql.Driver" 
        connectionURL="jdbc:mysql://112.74.209.133:3306/ihotel?useUnicode=true&amp;characterEncoding=UTF-8"  
         userId="root" password="x5233750"/>  
         
        <!-- 指定生成的类型为java类型，避免数据库中number等类型字段 -->  
        <javaTypeResolver>  
            <property name="forceBigDecimals" value="false"/>  
        </javaTypeResolver>  
        
        
        
        <!-- 生成model模型，对应的包，存放位置可以指定具体的路径,如/ProjectName/src，也可以使用MAVEN来自动生成 -->  
        <javaModelGenerator targetPackage="com.hotel.model" targetProject="src\main\java">  
            <property name="enableSubPackages" value="true"/>  
        </javaModelGenerator>  
          
        <!--对应的xml mapper文件  	-->
        <sqlMapGenerator  targetPackage="/mybatis/mysql" targetProject="src\main\resources">  
            <property name="enableSubPackages" value="true"/>  
        </sqlMapGenerator>  
          
          
        <!-- 对应的dao接口  --> 
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.hotel.dao" targetProject="src\main\java">  
            <property name="enableSubPackages" value="true"/>  
        </javaClientGenerator>  
         
        <table tableName="t_banner" domainObjectName="Banner"
           enableSelectByExample="false"
	       enableDeleteByExample="false"
	       enableCountByExample="false"
	       enableUpdateByExample="false"/> 
        <table tableName="t_banner_detail" domainObjectName="BannerDetail"
           enableSelectByExample="false"
	       enableDeleteByExample="false"
	       enableCountByExample="false"
	       enableUpdateByExample="false"/> 
        <table tableName="t_Item_tag" domainObjectName="ItemTag"
           enableSelectByExample="false"
	       enableDeleteByExample="false"
	       enableCountByExample="false"
	       enableUpdateByExample="false"/> 
        <table tableName="t_search_text" domainObjectName="SearchText"
           enableSelectByExample="false"
	       enableDeleteByExample="false"
	       enableCountByExample="false"
	       enableUpdateByExample="false"/> 
     
    </context>  
</generatorConfiguration>  